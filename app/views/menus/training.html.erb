<% content_for :content_panel do %>
  <div class="row">
    <div class="col-2"></div>
    <div class="d-flex justify-content-center">
      <span class="text-span">
        <%= raw("A scarred veteran looks you up and down.<br>He asks 'Are you here for training?'<br>") %>
      </span>
    </div>
    <div class="col-2"></div>
  </div>

  <div class="row">
    <div class="col-2"></div>
    <div class="col justify-content-center monster-card">
      <div class="row">
        <span class="monster-title">
          <%= "Training costs #{@player.next_level.gold} gold." %>
        </span>
        <br>
      </div>
      <div class="row">
        <span>
          <% if @player.can_level? %>
            <%= raw("You seem ready, to me.  Shall we begin?<br>") %>
          <% else %>
            <%= raw("You are not yet experienced enough to learn what I have to teach.<br>") %>
          <% end %>
        </span>
      </div>
      <div id="monster-actions" class="row">
        <% if @player.can_level? %>
        <div class="col">
          <span class="badge badge-pill bg-success left_action_badge">1</span>
          <%= link_to "Train", train_menus_path(player_id: @player.id), class: "action_btn btn btn-info rounded-pill", "data-hotkey": 1, "data-turbo-method": :post %>
        </div>
        <% end %>
        <div class="col">
          <span class="badge badge-pill bg-success left_action_badge">2</span>
          <%= link_to "Leave", dash_menus_path(player_id: @player.id, message: "You leave without training.<br><br>What would you like to do?"), class: "action_btn btn btn-info rounded-pill", "data-hotkey": 2 %>
        </div>
      </div>
    </div>
    <div class="col-2"></div>
  </div>
<% end %>

<%= render "layouts/mainframe" %>
