<% content_for :content_panel do %>
  <div class="row">
    <div class="col-2"></div>
    <div class="d-flex justify-content-center">
      <span class="text-span">
        <%= raw(@fight.message) %>
      </span>
    </div>
    <div class="col-2"></div>
  </div>

  <% if @fight.ended %>
    <% if @player.is_dead? %>
    <div class="row">
      <div class="col-2"></div>
      <div class="col justify-content-center monster-card">
        <span class="badge badge-pill bg-success left_action_badge">1</span>
        <%= link_to "Restart", login_menus_path, class: "action_btn btn btn-info rounded-pill" %>
      </div>
      <div class="col-2"></div>
    </div>
    <% else %>
      <% if @day_ended %>
      <div class="row">
        <div class="col-2"></div>
        <div class="col justify-content-center monster-card">
          <span class="badge badge-pill bg-success left_action_badge">1</span>
          <%= link_to "Continue", dash_menus_path(player_id: @player.id), class: "action_btn btn btn-info rounded-pill" %>
        </div>
        <div class="col-2"></div>
      </div>
      <% end %>
    <% end %>
  <% else %>
  <div class="row">
    <div class="col-2"></div>
    <div class="col justify-content-center monster-card">
      <div class="row">
        <span class="monster-title">
          <%= @fight.monster.name %>
        </span>
      </div>
      <div class="row">
        <span>
          <b>HP:</b><%= " #{@fight.currenthp}/#{@fight.monster.hp}" %>
        </span>
      </div>
      <div id="monster-actions" class="row">
        <% unless @fight.monster.is_boss %>
        <div class="col">
          <span class="badge badge-pill bg-success left_action_badge">1</span>
          <%= link_to "Run", run_fights_path(fight_id: @fight.id, player_id: @player.id), class: "action_btn btn btn-info rounded-pill" %>
        </div>
        <% end %>
        <div class="col">
          <span class="badge badge-pill bg-success left_action_badge">2</span>
          <%= link_to "Attack", attack_fights_path(fight_id: @fight.id, player_id: @player.id), class: "action_btn btn btn-info rounded-pill" %>
        </div>
        <% if @player.skills > 0 %>
        <div class="col">
          <span class="badge badge-pill bg-success left_action_badge">3</span>
          <%= link_to "Backstab", backstab_fights_path(fight_id: @fight.id, player_id: @player.id), class: "action_btn btn btn-info rounded-pill" %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="col-2"></div>
  </div>
  <% end %>
<% end %>

<%= render "layouts/mainframe" %>
