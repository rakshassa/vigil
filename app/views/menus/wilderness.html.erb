<% content_for :content_panel do %>
  <div class="row">
    <div class="col-2"></div>
    <div class="d-flex justify-content-center">
      <span class="text-span">
        <%= @fight.message %>
      </span>
    </div>
    <div class="col-2"></div>
  </div>

  <% if @fight.ended %>
  What do you do now?
  <% else %>
  <div class="row">
    <div class="col-2"></div>
    <div class="col justify-content-center monster-card">
      <div class="row">
        <span class="monster-title">
          <%= @fight.monster.name %>
        </span>
      </div>
      <div class="row">
        <span>
          <b>HP:</b><%= " #{@fight.currenthp}/#{@fight.monster.hp}" %>
        </span>
      </div>
      <div id="monster-actions" class="row">
        <div class="col">
          <span class="badge badge-pill bg-success left_action_badge">1</span>
          <%= link_to "Run", run_fight_path(@fight), class: "action_btn btn btn-info rounded-pill" %>
        </div>
        <div class="col">
          <span class="badge badge-pill bg-success left_action_badge">2</span>
          <%= link_to "Attack", attack_fight_path(@fight), class: "action_btn btn btn-info rounded-pill" %>
        </div>
        <div class="col">
          <span class="badge badge-pill bg-success left_action_badge">3</span>
          <%= link_to "Backstab", backstab_fight_path(@fight), class: "action_btn btn btn-info rounded-pill" %>
        </div>
      </div>
    </div>
    <div class="col-2"></div>
  </div>
  <% end %>
<% end %>

<%= render "mainframe" %>
