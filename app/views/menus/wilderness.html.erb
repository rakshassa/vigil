<% content_for :content_panel do %>
  <div class="row">
    <div class="col-2"></div>
    <div class="d-flex justify-content-center">
      <span class="text-span">
        <%= raw(@fight.message) %>
      </span>
    </div>
    <div class="col-2"></div>
  </div>

  <% if @fight.ended %>
    <% if @player.is_dead? %>
    <div class="row">
      <div class="col-2"></div>
      <div class="col justify-content-center monster-card">
        <span class="badge badge-pill bg-success left_action_badge">1</span>
        <%= link_to "Restart", login_menus_path, class: "action_btn btn btn-info rounded-pill", "data-hotkey": '1', id: "restart_button" %>
      </div>
      <div class="col-2"></div>
    </div>
    <% else %>
      <% if @day_ended %>
      <div class="row">
        <div class="col-2"></div>
        <div class="col justify-content-center monster-card">
          <span class="badge badge-pill bg-success left_action_badge">1</span>
          <%= link_to "Continue", dash_menus_path(player_id: @player.id), class: "action_btn btn btn-info rounded-pill", "data-hotkey": '1', id: "day_ended_continue_button" %>
        </div>
        <div class="col-2"></div>
      </div>
      <% end %>
    <% end %>
  <% else %>
  <div class="row">
    <% if @fight.monster.present? %>
      <%= render "monster" %>
    <% else %>
      <%= render "encounter" %>
    <% end %>
  </div>
  <% end %>
<% end %>

<%= render "layouts/mainframe" %>
