<% if @disable_actions %>
<div class="glass-pane">
</div>
<% end %>

<div class="btn-group-vertical">
  <div>
    <span class="badge badge-pill bg-success left_action_badge">W</span>
    <%= link_to "Wilderness", wilderness_menus_path(@player, fight_id: nil), class: "action_btn btn btn-info rounded-pill" %>
  </div>
  <div>
    <span class="badge badge-pill bg-success left_action_badge">T</span>
    <%= link_to "Training", training_menus_path(@player), class: "action_btn btn btn-info rounded-pill" %>
    <% if @player.can_level? %>
    <span class="badge badge-pill bg-danger right_action_badge">!</span>
    <% end %>
  </div>
  <div>
    <span class="badge badge-pill bg-success left_action_badge">S</span>
    <%= link_to "Shop", shop_shops_path, class: "action_btn btn btn-info rounded-pill" %>
  </div>
  <div>
    <span class="badge badge-pill bg-success left_action_badge">J</span>
    <button type="button" class="btn btn-info action_btn rounded-pill">
      Jeweler
    </button>
  </div>
  <div>
    <span class="badge badge-pill bg-success left_action_badge">B</span>
    <button type="button" class="btn btn-info action_btn rounded-pill">
      Bard
    </button>
    <span class="badge badge-pill bg-danger right_action_badge">!</span>
  </div>
  <div>
    <span class="badge badge-pill bg-success left_action_badge">H</span>
    <%= link_to "Healer", healer_menus_path, class: "action_btn btn btn-info rounded-pill" %>
  </div>
  <div>
    <span class="badge badge-pill bg-success left_action_badge">S</span>
    <button type="button" class="btn btn-info action_btn rounded-pill">
      Scouts
    </button>
    <span class="badge badge-pill bg-danger right_action_badge">!</span>
  </div>
</div>
